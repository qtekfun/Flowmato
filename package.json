{
  "name": "flowmato",
  "version": "1.0.0",
  "description": "Production-grade TypeScript React Native Pomodoro App",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:web": "expo export --platform web",
    "build:electron": "npm run build:web && electron-builder",
    "build:preview": "eas build --platform all --profile preview",
    "build:production": "eas build --platform all --profile production",
    "build:android:preview": "eas build --platform android --profile preview",
    "build:ios:preview": "eas build --platform ios --profile preview",
    "build:android:production": "eas build --platform android --profile production",
    "build:ios:production": "eas build --platform ios --profile production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:web": "cypress run",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "prebuild": "expo prebuild",
    "clean": "expo r -c",
    "postinstall": "patch-package",
    "setup:cicd": "powershell -ExecutionPolicy Bypass -File scripts/setup-cicd.ps1",
    "setup:cicd:bash": "bash scripts/setup-cicd.sh",
    "build:local": "expo prebuild --platform android --clear && cd android && ./gradlew assembleDebug",
    "build:local:debug": "expo prebuild --platform android --clear && cd android && ./gradlew assembleDebug",
    "setup:local": "powershell -ExecutionPolicy Bypass -File scripts/setup-local-build.ps1",
    "setup:local:bash": "bash scripts/setup-local-build.sh"
  },
  "dependencies": {
  "@expo/vector-icons": "^13.0.0",
  "@react-navigation/native": "^6.1.9",
  "expo": "~49.0.0",
  "expo-av": "~13.4.1",
  "expo-constants": "~14.4.2",
  "expo-font": "~11.4.0",
  "expo-haptics": "~12.4.0",
  "expo-linking": "~5.0.2",
  "expo-notifications": "~0.20.1",
  "expo-router": "^2.0.0",
  "expo-secure-store": "~12.3.1",
  "expo-splash-screen": "~0.20.5",
  "expo-status-bar": "~1.6.0",
  "expo-system-ui": "~2.4.0",
  "i18next": "^25.5.2",
  "react": "18.2.0",
  "react-dom": "18.2.0",
  "react-i18next": "^16.0.0",
  "react-native": "0.73.7",
  "react-native-mmkv": "^2.10.1",
  "react-native-reanimated": "~3.3.0",
  "react-native-safe-area-context": "4.6.3",
  "react-native-screens": "~3.22.0",
  "react-native-web": "~0.19.6",
  "zod": "^3.22.4",
  "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@expo/config-plugins": "~7.2.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.3.0",
    "@types/jest": "^29.5.5",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "cypress": "^13.3.0",
    "detox": "^20.13.0",
    "electron": "^38.2.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-config-expo": "~7.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.7.0",
  "jest-expo": "~49.0.0",
  "react-test-renderer": "18.2.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.1.3"
  },
  "private": true,
  "keywords": [
    "pomodoro",
    "timer",
    "productivity",
    "react-native",
    "expo",
    "typescript",
    "cross-platform"
  ],
  "author": "Flowmato Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    }
  }
}
